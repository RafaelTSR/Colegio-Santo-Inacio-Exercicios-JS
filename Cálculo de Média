        <script>
       		
            //Entrada de dados
        	var nota1 = Number(prompt("Nota do primeiro Bimestre"));
        	var nota2 = Number(prompt("Nota do segundo Bimestre"));
            
            //Cálculo
        	var media = (nota1+nota2)/2
            
            //Saída de dados
        	alert("Sua media é:" + media.toFixed(1));
        
        
        
        </script>
